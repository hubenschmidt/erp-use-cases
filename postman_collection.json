{
  "info": {
    "name": "ERP Mock API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000"
    }
  ],
  "item": [
    {
      "name": "Inventory",
      "item": [
        {
          "name": "Get All Inventory",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/inventory",
              "host": ["{{baseUrl}}"],
              "path": ["api", "inventory"]
            }
          }
        },
        {
          "name": "Get Inventory by Location",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/inventory?location=WH-EAST",
              "host": ["{{baseUrl}}"],
              "path": ["api", "inventory"],
              "query": [
                {"key": "location", "value": "WH-EAST"}
              ]
            }
          }
        },
        {
          "name": "Get Inventory by SKU",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/inventory/WIDGET-001",
              "host": ["{{baseUrl}}"],
              "path": ["api", "inventory", "WIDGET-001"]
            }
          }
        },
        {
          "name": "Transfer Stock",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/inventory/transfer",
              "host": ["{{baseUrl}}"],
              "path": ["api", "inventory", "transfer"]
            },
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sku\": \"GADGET-002\",\n  \"from_location\": \"WH-EAST\",\n  \"to_location\": \"WH-CENTRAL\",\n  \"qty\": 5\n}"
            }
          }
        },
        {
          "name": "Get Locations",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/locations",
              "host": ["{{baseUrl}}"],
              "path": ["api", "locations"]
            }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Get All Orders",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/orders",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders"]
            }
          }
        },
        {
          "name": "Get Orders by Status",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/orders?status=pending",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders"],
              "query": [
                {"key": "status", "value": "pending"}
              ]
            }
          }
        },
        {
          "name": "Get Orders by Customer",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/orders?customer_id=CUST-001",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders"],
              "query": [
                {"key": "customer_id", "value": "CUST-001"}
              ]
            }
          }
        },
        {
          "name": "Get Order Summary",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/orders/summary",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "summary"]
            }
          }
        },
        {
          "name": "Get Order by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/orders/ORD-10001",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "ORD-10001"]
            }
          }
        },
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/api/orders",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders"]
            },
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customer_id\": \"CUST-001\",\n  \"items\": [\n    {\n      \"sku\": \"WIDGET-001\",\n      \"qty\": 25,\n      \"unit_price\": 12.50,\n      \"location\": \"WH-EAST\"\n    }\n  ]\n}"
            }
          }
        },
        {
          "name": "Update Order Status",
          "request": {
            "method": "PATCH",
            "url": {
              "raw": "{{baseUrl}}/api/orders/ORD-10003/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "orders", "ORD-10003", "status"]
            },
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"processing\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Reports",
      "item": [
        {
          "name": "Low Stock Report",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/reports/low-stock",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reports", "low-stock"]
            }
          }
        },
        {
          "name": "Dead Stock Report (90 days)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/reports/dead-stock",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reports", "dead-stock"]
            }
          }
        },
        {
          "name": "Dead Stock Report (60 days)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/reports/dead-stock?days=60",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reports", "dead-stock"],
              "query": [
                {"key": "days", "value": "60"}
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Customers",
      "item": [
        {
          "name": "Get All Customers",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/customers",
              "host": ["{{baseUrl}}"],
              "path": ["api", "customers"]
            }
          }
        }
      ]
    }
  ]
}
